{
  "name": "vibe-code-protector",
  "displayName": "Vibe Code Protector",
  "description": "A Visual Studio Code extension for scanning documents for AI instruction security issues.",
  "version": "0.1.0",
  "publisher": "SimonArrowhead",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimonArrowhead/vibe-code-protector.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onDidOpenTextDocument",
    "onDidSaveTextDocument"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiInstructionSecurity.scan",
        "title": "Scan for AI Instruction Security Issues"
      },
      {
        "command": "aiInstructionSecurity.sanitize",
        "title": "Sanitize Document"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "AI Instruction Security",
      "properties": {
        "aiInstructionSecurity.autoScan": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan documents for AI instruction security issues on open and save."
        }
      }
    }
  },
  "scripts": {
    "watch": "tsc -watch",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "mocha": "^9.1.3",
    "chai": "^4.3.4",
    "typescript": "^4.4.3",
    "vscode-test": "^1.6.0"
  },
  "dependencies": {}
}