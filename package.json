{
  "name": "vibe-code-protector",
  "displayName": "Vibe Code Protector",
  "description": "Protect your AI instruction files from security vulnerabilities like prompt injection, zero-width characters, and Unicode exploits. Scan, detect, and sanitize potential issues.",
  "version": "0.1.1",
  "publisher": "SimonArrowhead",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimonArrowhead/vibe-code-protector.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onDidOpenTextDocument",
    "onDidSaveTextDocument"
  ],
  "main": "./src/extension.js",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#2B5797",
    "theme": "dark"
  },
  "contributes": {
    "commands": [
      {
        "command": "aiInstructionSecurity.scan",
        "title": "VCP: Scan for Security Issues"
      },
      {
        "command": "aiInstructionSecurity.sanitize",
        "title": "VCP: Sanitize Document"
      },
      {
        "command": "aiInstructionSecurity.selectiveSanitize",
        "title": "VCP: Selective Sanitize"
      },
      {
        "command": "aiInstructionSecurity.openSettings",
        "title": "VCP: Open Settings"
      },
      {
        "command": "aiInstructionSecurity.manageCustomPatterns",
        "title": "VCP: Manage Custom Patterns"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "aiInstructionSecurity.scan",
          "group": "VibeCodeProtector@1"
        },
        {
          "when": "editorFocus",
          "command": "aiInstructionSecurity.sanitize",
          "group": "VibeCodeProtector@2"
        },
        {
          "when": "editorFocus",
          "command": "aiInstructionSecurity.selectiveSanitize",
          "group": "VibeCodeProtector@3"
        }
      ],
      "commandPalette": [
        {
          "command": "aiInstructionSecurity.scan",
          "when": "editorIsOpen"
        },
        {
          "command": "aiInstructionSecurity.sanitize",
          "when": "editorIsOpen"
        },
        {
          "command": "aiInstructionSecurity.selectiveSanitize",
          "when": "editorIsOpen"
        },
        {
          "command": "aiInstructionSecurity.openSettings",
          "when": "editorIsOpen"
        },
        {
          "command": "aiInstructionSecurity.manageCustomPatterns",
          "when": "editorIsOpen"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "AI Instruction Security",
      "properties": {
        "aiInstructionSecurity.autoScan": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan documents for AI instruction security issues on open and save."
        },
        "aiInstructionSecurity.detection.zeroWidth": {
          "type": "boolean",
          "default": true,
          "description": "Detect zero-width characters."
        },
        "aiInstructionSecurity.detection.rtlOverride": {
          "type": "boolean",
          "default": true,
          "description": "Detect right-to-left override characters."
        },
        "aiInstructionSecurity.detection.homoglyphs": {
          "type": "boolean",
          "default": true,
          "description": "Detect homoglyphs (e.g. Cyrillic characters that look like Latin)."
        },
        "aiInstructionSecurity.detection.invisibleChars": {
          "type": "boolean",
          "default": true,
          "description": "Detect invisible characters and Unicode Tags."
        },
        "aiInstructionSecurity.detection.privateUseArea": {
          "type": "boolean",
          "default": true,
          "description": "Detect Private Use Area Unicode characters."
        },
        "aiInstructionSecurity.detection.promptInjection": {
          "type": "boolean",
          "default": true,
          "description": "Detect prompt injection patterns."
        },
        "aiInstructionSecurity.sanitization.defaultRemove": {
          "type": "array",
          "default": ["zeroWidth", "rtlOverride", "homoglyphs", "invisibleChars", "privateUseArea", "promptInjection"],
          "description": "Default items to remove when using the Sanitize Document command.",
          "items": {
            "type": "string",
            "enum": [
              "zeroWidth", 
              "rtlOverride", 
              "homoglyphs", 
              "invisibleChars",
              "privateUseArea", 
              "promptInjection"
            ]
          }
        },
        "aiInstructionSecurity.promptInjection.customPatterns": {
          "type": "array",
          "default": [],
          "description": "Custom regex patterns to detect prompt injection (in string format)."
        }
      }
    }
  },
  "scripts": {
    "watch": "tsc -watch",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "mocha": "^9.1.3",
    "chai": "^4.3.4",
    "typescript": "^4.4.3",
    "vscode-test": "^1.6.0"
  },
  "dependencies": {},
  "keywords": [
    "security",
    "ai",
    "prompt",
    "sanitize",
    "zero-width",
    "homoglyphs"
  ]
}